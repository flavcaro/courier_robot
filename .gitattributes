# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts must use LF (Unix line endings)
*.sh text eol=lf

# Python files
*.py text eol=lf

# Batch scripts use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.pdf binary
*.dae binary
*.stl binary
